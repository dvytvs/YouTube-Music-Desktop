{
  "name": "youtube-music",
  "version": "1.0.0",
  "main": "main.js",
  "description": "YouTube Music Desktop Client",
  "author": {
    "name": "YouTube Music User",
    "email": "user@example.com"
  },
  "homepage": "https://music.youtube.com",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --linux"
  },
  "build": {
    "appId": "com.youtube.music",
    "productName": "YouTube Music",
    "directories": {
      "output": "dist"
    },
    "files": ["*.js", "package.json"],
    "linux": {
      "target": ["deb", "pacman", "flatpak", "snap", "tar.gz", "appimage"],
      "icon": "build/icons/linux",
      "category": "AudioVideo",
      "synopsis": "YouTube Music Desktop Client",
      "maintainer": "YouTube Music User <user@example.com>"
    },
    "flatpak": {
      "runtimeVersion": "23.08",
      "base": "org.electronjs.Electron2.BaseApp",
      "baseVersion": "23.08"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0"
  }
}
